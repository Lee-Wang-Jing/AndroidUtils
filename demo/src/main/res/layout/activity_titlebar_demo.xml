<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.wangjing.widget.titlebar.TitleBar
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleBar_bottom_line_color="#000000"
            app:titleBar_bottom_line_height="1px"
            app:titleBar_center_text="TitleBarDemoActivity"
            app:titleBar_center_text_color="@color/black"
            app:titleBar_center_text_size="18sp"
            app:titleBar_left_image="@mipmap/wj_ic_back"
            app:titleBar_style="style_0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="1、style_1 -- 图片 文本 图片"
            android:textSize="18sp" />

        <com.wangjing.widget.titlebar.TitleBar
            android:id="@+id/title_bar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleBar_bottom_line_color="#000000"
            app:titleBar_bottom_line_height="1px"
            app:titleBar_center_text="图片 文本 图片"
            app:titleBar_center_text_color="@color/black"
            app:titleBar_center_text_size="18sp"
            app:titleBar_left_image="@mipmap/wj_ic_back"
            app:titleBar_right_image="@mipmap/ic_launcher"
            app:titleBar_style="style_1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="2、style_2 -- 图片 文本 文本"
            android:textSize="18sp" />

        <com.wangjing.widget.titlebar.TitleBar
            android:id="@+id/title_bar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleBar_bottom_line_color="#000000"
            app:titleBar_bottom_line_height="1px"
            app:titleBar_center_text="图片 文本 文本"
            app:titleBar_center_text_color="@color/black"
            app:titleBar_center_text_size="18sp"
            app:titleBar_left_image="@mipmap/wj_ic_back"
            app:titleBar_right_text="文本"
            app:titleBar_right_text_color="@color/black"
            app:titleBar_right_text_size="18sp"
            app:titleBar_style="style_2" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="3、style_3 -- 文本 文本 无"
            android:textSize="18sp" />

        <com.wangjing.widget.titlebar.TitleBar
            android:id="@+id/title_bar3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleBar_bottom_line_color="#000000"
            app:titleBar_bottom_line_height="1px"
            app:titleBar_center_text="文本 文本 无"
            app:titleBar_center_text_color="@color/black"
            app:titleBar_center_text_size="18sp"
            app:titleBar_left_text="文本"
            app:titleBar_left_text_color="@color/black"
            app:titleBar_left_text_size="18sp"
            app:titleBar_style="style_3" />
    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.core.widget.NestedScrollView>